<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_trips">

    <fragment
        android:id="@+id/navigation_trips"
        android:name="com.example.travelcompanion.ui.trips.TripListFragment"
        android:label="Trips"
        tools:layout="@layout/fragment_trip_list">
        <action
            android:id="@+id/action_trips_to_add"
            app:destination="@id/navigation_add_trip" />
    </fragment>

    <fragment
        android:id="@+id/navigation_add_trip"
        android:name="com.example.travelcompanion.ui.trips.AddTripFragment"
        android:label="Add Trip"
        tools:layout="@layout/fragment_add_trip" />

    <fragment
        android:id="@+id/navigation_journey"
        android:name="com.example.travelcompanion.ui.journey.JourneyFragment"
        android:label="Journey"
        tools:layout="@layout/fragment_journey" />

    <fragment
        android:id="@+id/navigation_stats"
        android:name="com.example.travelcompanion.ui.stats.StatsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_stats" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.travelcompanion.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
