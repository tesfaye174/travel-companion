<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:background="?attr/colorSurface" android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout android:id="@+id/app_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="?attr/colorSurface" app:elevation="0dp" app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingHorizontal="20dp" android:paddingTop="16dp" android:paddingBottom="8dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/app_name" android:textAppearance="@style/TextAppearance.TravelCompanion.HeadlineMedium" android:textColor="?attr/colorPrimary" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/welcome_message" android:textAppearance="@style/TextAppearance.TravelCompanion.BodyLarge" android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:clipToPadding="false" android:overScrollMode="never" app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingHorizontal="16dp" android:paddingBottom="100dp">

            <com.google.android.material.card.MaterialCardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="16dp" app:cardBackgroundColor="?attr/colorSurface" app:cardCornerRadius="20dp" app:cardElevation="2dp" app:strokeColor="@color/md_theme_light_outlineVariant" app:strokeWidth="1dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="20dp">

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/quick_actions" android:textAppearance="@style/TextAppearance.TravelCompanion.TitleMedium" android:textColor="?attr/colorOnSurface" />

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton android:id="@+id/btn_new_trip" style="@style/Widget.TravelCompanion.Button" android:layout_width="0dp" android:layout_height="56dp" android:layout_marginEnd="8dp" android:layout_weight="1" android:text="@string/new_trip" android:textAllCaps="false" app:cornerRadius="14dp" app:icon="@drawable/ic_add" app:iconGravity="textStart" app:iconPadding="8dp" />

                        <com.google.android.material.button.MaterialButton android:id="@+id/btn_view_trips" style="@style/Widget.TravelCompanion.Button.Tonal" android:layout_width="0dp" android:layout_height="56dp" android:layout_weight="1" android:text="@string/view_trips" android:textAllCaps="false" app:cornerRadius="14dp" app:icon="@drawable/ic_trip" app:iconGravity="textStart" app:iconPadding="8dp" />

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton android:id="@+id/btn_view_map" style="@style/Widget.TravelCompanion.Button.Outlined" android:layout_width="0dp" android:layout_height="56dp" android:layout_marginEnd="8dp" android:layout_weight="1" android:text="@string/view_map" android:textAllCaps="false" app:cornerRadius="14dp" app:icon="@drawable/ic_map" app:iconGravity="textStart" app:iconPadding="8dp" app:strokeColor="?attr/colorOutlineVariant" />

                        <com.google.android.material.button.MaterialButton android:id="@+id/btn_view_stats" style="@style/Widget.TravelCompanion.Button.Outlined" android:layout_width="0dp" android:layout_height="56dp" android:layout_weight="1" android:text="@string/view_stats" android:textAllCaps="false" app:cornerRadius="14dp" app:icon="@drawable/ic_stats" app:iconGravity="textStart" app:iconPadding="8dp" app:strokeColor="?attr/colorOutlineVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="4dp" android:layout_marginBottom="12dp" android:text="@string/summary" android:textAppearance="@style/TextAppearance.TravelCompanion.TitleMedium" android:textColor="?attr/colorOnSurface" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginEnd="8dp" android:layout_weight="1" app:cardBackgroundColor="@color/md_theme_light_primaryContainer" app:cardCornerRadius="16dp" app:cardElevation="0dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

                        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/bg_icon_circle" android:backgroundTint="@color/md_theme_light_primary" android:padding="8dp" android:src="@drawable/ic_location" app:tint="@color/white" android:contentDescription="@null" />

                        <TextView android:id="@+id/tv_total_trips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="0" android:textAppearance="@style/TextAppearance.TravelCompanion.HeadlineMedium" android:textColor="@color/md_theme_light_onPrimaryContainer" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_trips" android:textAppearance="@style/TextAppearance.TravelCompanion.LabelMedium" android:textColor="@color/md_theme_light_onPrimaryContainer" android:alpha="0.8" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" app:cardBackgroundColor="@color/md_theme_light_tertiaryContainer" app:cardCornerRadius="16dp" app:cardElevation="0dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">

                        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:background="@drawable/bg_icon_circle" android:backgroundTint="@color/md_theme_light_tertiary" android:padding="8dp" android:src="@drawable/ic_road" app:tint="@color/white" android:contentDescription="@null" />

                        <TextView android:id="@+id/tv_total_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="0 km" android:textAppearance="@style/TextAppearance.TravelCompanion.HeadlineMedium" android:textColor="@color/md_theme_light_onTertiaryContainer" />

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/total_distance" android:textAppearance="@style/TextAppearance.TravelCompanion.LabelMedium" android:textColor="@color/md_theme_light_onTertiaryContainer" android:alpha="0.8" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="12dp" android:gravity="center_vertical" android:orientation="horizontal">

                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginStart="4dp" android:layout_weight="1" android:text="@string/recent_trips" android:textAppearance="@style/TextAppearance.TravelCompanion.TitleMedium" android:textColor="?attr/colorOnSurface" />

                <com.google.android.material.button.MaterialButton android:id="@+id/btn_see_all" style="@style/Widget.TravelCompanion.Button.Text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_all" android:textAllCaps="false" app:rippleColor="?attr/colorPrimaryContainer" />

            </LinearLayout>

            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_recent_trips" android:layout_width="match_parent" android:layout_height="wrap_content" android:clipToPadding="false" android:nestedScrollingEnabled="false" android:overScrollMode="never" android:visibility="gone" tools:itemCount="3" tools:listitem="@layout/item_trip" />

                <include android:id="@+id/layout_empty_state" layout="@layout/layout_empty_state" android:layout_width="match_parent" android:layout_height="wrap_content" />

            </FrameLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton android:id="@+id/fab_add_trip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="bottom|end" android:layout_margin="16dp" android:text="@string/new_trip" android:textAllCaps="false" app:icon="@drawable/ic_add" app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>