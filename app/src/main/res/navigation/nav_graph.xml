<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_trips">

    <fragment
        android:id="@+id/navigation_trips"
        android:name="com.example.travelcompanion.ui.trips.TripsFragment"
        android:label="Viaggi">
        <action
            android:id="@+id/action_trips_to_newTrip"
            app:destination="@id/newTripFragment" />
        <action
            android:id="@+id/action_trips_to_tripDetails"
            app:destination="@id/tripDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/newTripFragment"
        android:name="com.example.travelcompanion.ui.newtrip.NewTripFragment"
        android:label="Nuovo Viaggio" />

    <fragment
        android:id="@+id/tripDetailsFragment"
        android:name="com.example.travelcompanion.ui.tripdetails.TripDetailsFragment"
        android:label="Dettaglio Viaggio">
        <argument
            android:name="tripId"
            app:argType="long" />
        <action
            android:id="@+id/action_tripDetails_to_journey"
            app:destination="@id/journeyFragment" />
    </fragment>

    <fragment
        android:id="@+id/journeyFragment"
        android:name="com.example.travelcompanion.ui.journey.JourneyFragment"
        android:label="Tracking Journey" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.travelcompanion.ui.map.MapFragment"
        android:label="Mappa" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.travelcompanion.ui.statistics.StatisticsFragment"
        android:label="Statistiche" />

</navigation>

    <!-- AndroidManifest.xml -->
    <?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="com.example.travelcompanion">

<!-- Permissions -->
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.CAMERA" />
<uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
<uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
<uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
    android:maxSdkVersion="28" />

<uses-feature android:name="android.hardware.camera" android:required="false" />
<uses-feature android:name="android.hardware.location.gps" android:required="false" />

<application
    android:name=".TravelCompanionApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.TravelCompanion">

    <!-- Google Maps API Key -->
    <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="${MAPS_API_KEY}" />

    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:theme="@style/Theme.TravelCompanion">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Tracking Service -->
    <service
        android:name=".utils.TrackingService"
        android:enabled="true"
        android:exported="false"
        android:foregroundServiceType="location" />

    <!-- File Provider for Camera -->
    <provider
        android:name="androidx.core.content.FileProvider"
        android:authorities="${applicationId}.fileprovider"
        android:exported="false"
        android:grantUriPermissions="true">
        <meta-data
            android:name="android.support.FILE_PROVIDER_PATHS"
            android:resource="@xml/file_paths" />
    </provider>

</application>

</manifest>