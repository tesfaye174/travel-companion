<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".ui.StatisticsActivity">

    <!-- Title -->
    <TextView android:id="@+id/title_statistics" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Statistics" android:textSize="24sp" android:textStyle="bold" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" />

    <!-- Total Stats -->
    <LinearLayout android:id="@+id/total_stats" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintTop_toBottomOf="@id/title_statistics" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp">

        <TextView android:id="@+id/total_trips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Trips: 12" android:layout_marginEnd="16dp" />

        <TextView android:id="@+id/total_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Distance: 145 km" android:layout_marginEnd="16dp" />

        <TextView android:id="@+id/total_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Duration: 28 hrs" />

    </LinearLayout>

    <!-- Chart -->
    <com.github.mikephil.charting.charts.BarChart android:id="@+id/bar_chart" android:layout_width="match_parent" android:layout_height="0dp" android:contentDescription="Bar chart showing trip statistics" android:importantForAccessibility="yes" app:layout_constraintTop_toBottomOf="@id/total_stats" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>