<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" style="@style/Widget.TravelCompanion.Card" app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp">

        <View android:id="@+id/view_trip_indicator" android:layout_width="4dp" android:layout_height="0dp" android:background="?attr/colorPrimary" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" />

        <ImageView android:id="@+id/iv_thumbnail" android:layout_width="100dp" android:layout_height="72dp" android:scaleType="centerCrop" android:contentDescription="" android:src="@drawable/placeholder_image" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" />

        <TextView android:id="@+id/tv_photo_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:textColor="@android:color/white" android:textSize="11sp" android:background="@drawable/bg_photo_count" android:paddingStart="6dp" android:paddingEnd="6dp" app:layout_constraintEnd_toEndOf="@id/iv_thumbnail" app:layout_constraintTop_toTopOf="@id/iv_thumbnail" android:layout_margin="6dp" />

        <ImageView android:id="@+id/iv_trip_type" android:layout_width="20dp" android:layout_height="20dp" android:contentDescription="" app:srcCompat="@drawable/ic_trip" app:layout_constraintStart_toEndOf="@id/view_trip_indicator" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="12dp" />

        <TextView android:id="@+id/tv_destination" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Roma, Italia" android:textColor="?android:attr/textColorPrimary" android:textSize="16sp" android:textStyle="bold" app:layout_constraintStart_toEndOf="@id/iv_trip_type" app:layout_constraintEnd_toStartOf="@id/iv_thumbnail" app:layout_constraintTop_toTopOf="@id/iv_trip_type" android:layout_marginStart="8dp" android:ellipsize="end" android:maxLines="1" />

        <TextView android:id="@+id/tv_trip_type" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Multi-giorno" android:textColor="?attr/colorPrimary" android:textSize="14sp" app:layout_constraintStart_toStartOf="@id/tv_destination" app:layout_constraintTop_toBottomOf="@id/tv_destination" app:layout_constraintEnd_toStartOf="@id/iv_thumbnail" android:ellipsize="end" android:maxLines="1" />

        <TextView android:id="@+id/tv_dates" android:layout_width="0dp" android:layout_height="wrap_content" android:text="15-20 Gen 2026" android:textColor="?android:attr/textColorSecondary" android:textSize="12sp" app:layout_constraintStart_toStartOf="@id/tv_destination" app:layout_constraintTop_toBottomOf="@id/tv_trip_type" app:layout_constraintEnd_toStartOf="@id/iv_thumbnail" android:ellipsize="end" android:maxLines="1" />

        <LinearLayout android:id="@+id/layout_stats" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" app:layout_constraintStart_toStartOf="@id/tv_destination" app:layout_constraintTop_toBottomOf="@id/tv_dates" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp">

            <TextView android:id="@+id/tv_distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="12dp" android:text="120.5 km" android:textColor="?attr/colorPrimary" android:textSize="12sp" />

            <TextView android:id="@+id/tv_duration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="8h 2min" android:textColor="?attr/colorPrimary" android:textSize="12sp" />

        </LinearLayout>

        <ImageView android:id="@+id/iv_chevron" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_chevron_right" app:tint="?android:attr/textColorSecondary" app:layout_constraintEnd_toStartOf="@id/iv_thumbnail" app:layout_constraintTop_toTopOf="@id/iv_thumbnail" app:layout_constraintBottom_toBottomOf="@id/iv_thumbnail" android:layout_marginEnd="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>