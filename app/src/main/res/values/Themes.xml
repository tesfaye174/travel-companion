<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base per Travel Companion -->
    <style name="Theme.TravelCompanion" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>

        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorTertiaryVariant">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>

        <!-- Error colors -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Action bar / Toolbar -->
        <item name="actionBarSize">56dp</item>
        <item name="actionBarStyle">@style/Widget.TravelCompanion.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.TravelCompanion.PopupOverlay</item>

        <!-- Card view -->
        <item name="cardViewStyle">@style/Widget.TravelCompanion.CardView</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.TravelCompanion.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.TravelCompanion.Button.Outlined</item>
        <item name="materialButtonToggleGroupStyle">@style/Widget.TravelCompanion.Button.ToggleGroup</item>

        <!-- Text input layout -->
        <item name="textInputStyle">@style/Widget.TravelCompanion.TextInputLayout</item>

        <!-- Chip styles -->
        <item name="chipStyle">@style/Widget.TravelCompanion.Chip</item>

        <!-- Progress bar -->
        <item name="progressBarStyle">@style/Widget.TravelCompanion.ProgressBar</item>

        <!-- Switch -->
        <item name="switchStyle">@style/Widget.TravelCompanion.Switch</item>

        <!-- Radio button -->
        <item name="radioButtonStyle">@style/Widget.TravelCompanion.RadioButton</item>

        <!-- Checkbox -->
        <item name="checkboxStyle">@style/Widget.TravelCompanion.CheckBox</item>

        <!-- Bottom navigation -->
        <item name="bottomNavigationStyle">@style/Widget.TravelCompanion.BottomNavigationView</item>

        <!-- Tab layout -->
        <item name="tabStyle">@style/Widget.TravelCompanion.TabLayout</item>

        <!-- Floating action button -->
        <item name="floatingActionButtonStyle">@style/Widget.TravelCompanion.FloatingActionButton</item>

        <!-- App bar layout -->
        <item name="appBarLayoutStyle">@style/Widget.TravelCompanion.AppBarLayout</item>

        <!-- Window preferences -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">false</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="19">false</item>

        <!-- Edge-to-edge -->
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="29">true</item>

        <!-- Animation -->
        <item name="android:windowAnimationStyle">@style/WindowAnimation.TravelCompanion</item>

        <!-- Dialog theme -->
        <item name="alertDialogTheme">@style/ThemeOverlay.TravelCompanion.Dialog.Alert</item>
        <item name="dialogTheme">@style/ThemeOverlay.TravelCompanion.Dialog</item>

        <!-- Material theme attributes -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.TravelCompanion</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TravelCompanion.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TravelCompanion.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TravelCompanion.LargeComponent</item>
    </style>

    <!-- Tema per schermate di avvio/splash -->
    <style name="Theme.TravelCompanion.Launcher" parent="Theme.TravelCompanion">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Tema per dialoghi -->
    <style name="Theme.TravelCompanion.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- ========== STILI PER COMPONENTI ========== -->

    <!-- Action Bar -->
    <style name="Widget.TravelCompanion.ActionBar" parent="Widget.Material3.ActionBar">
        <item name="background">@color/md_theme_light_primary</item>
        <item name="titleTextStyle">@style/TextAppearance.TravelCompanion.ActionBar.Title</item>
        <item name="subtitleTextStyle">@style/TextAppearance.TravelCompanion.ActionBar.Subtitle</item>
        <item name="elevation">4dp</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <!-- Button -->
    <style name="Widget.TravelCompanion.Button" parent="Widget.Material3.Button">
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TravelCompanion.Button</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Button Outlined -->
    <style name="Widget.TravelCompanion.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/md_theme_light_outline</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Button Toggle Group -->
    <style name="Widget.TravelCompanion.Button.ToggleGroup" parent="Widget.Material3.ButtonToggleGroup">
        <item name="singleSelection">false</item>
        <item name="checkedButton">@null</item>
    </style>

    <!-- Text Input Layout -->
    <style name="Widget.TravelCompanion.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_theme_light_outline</item>
        <item name="boxStrokeErrorColor">@color/md_theme_light_error</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.TravelCompanion.Caption</item>
        <item name="errorTextAppearance">@style/TextAppearance.TravelCompanion.Caption.Error</item>
    </style>

    <!-- Card View -->
    <style name="Widget.TravelCompanion.CardView" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPadding">16dp</item>
        <item name="android:background">@color/card_background</item>
    </style>

    <!-- Chip -->
    <style name="Widget.TravelCompanion.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipBackgroundColor">@color/md_theme_light_primaryContainer</item>
        <item name="chipSurfaceColor">@color/md_theme_light_surface</item>
    </style>

    <!-- Progress Bar -->
    <style name="Widget.TravelCompanion.ProgressBar" parent="Widget.Material3.ProgressIndicator">
        <item name="trackColor">@color/md_theme_light_surfaceVariant</item>
        <item name="indicatorColor">@color/md_theme_light_primary</item>
    </style>

    <!-- Switch -->
    <style name="Widget.TravelCompanion.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="trackTint">@color/switch_track</item>
        <item name="thumbTint">@color/switch_thumb</item>
    </style>

    <!-- Radio Button -->
    <style name="Widget.TravelCompanion.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="buttonTint">@color/radio_button_tint</item>
    </style>

    <!-- CheckBox -->
    <style name="Widget.TravelCompanion.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="buttonTint">@color/checkbox_tint</item>
    </style>

    <!-- Bottom Navigation View -->
    <style name="Widget.TravelCompanion.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemBackground">?android:attr/selectableItemBackground</item>
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/bottom_nav_text_tint</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.TravelCompanion.Caption</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.TravelCompanion.Caption.Bold</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">8dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <!-- Tab Layout -->
    <style name="Widget.TravelCompanion.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/md_theme_light_primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/md_theme_light_primary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.TravelCompanion.FloatingActionButton" parent="Widget.Material3.FloatingActionButton">
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="tint">@color/md_theme_light_onPrimary</item>
        <item name="elevation">6dp</item>
        <item name="hoveredFocusedTranslationZ">12dp</item>
        <item name="pressedTranslationZ">6dp</item>
        <item name="rippleColor">@color/fab_ripple</item>
        <item name="fabSize">normal</item>
    </style>

    <!-- App Bar Layout -->
    <style name="Widget.TravelCompanion.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/md_theme_light_surface</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@animator/appbar_elevation</item>
    </style>

    <!-- ========== TEXT APPEARANCE ========== -->

    <style name="TextAppearance.TravelCompanion.Display.Large" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">57sp</item>
        <item name="android:letterSpacing">-0.25</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Display.Medium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Display.Small" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Headline.Large" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Headline.Medium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Headline.Small" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Title.Large" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Title.Medium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Title.Small" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Body.Large" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Body.Medium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Body.Small" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Label.Large" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Label.Medium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Label.Small" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Caption.Bold">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Caption.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_theme_light_error</item>
    </style>

    <style name="TextAppearance.TravelCompanion.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.TravelCompanion.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="TextAppearance.TravelCompanion.ActionBar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:alpha">0.87</item>
    </style>

    <!-- ========== SHAPE APPEARANCE ========== -->

    <style name="ShapeAppearance.TravelCompanion.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.TravelCompanion.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.TravelCompanion.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- ========== THEME OVERLAY ========== -->

    <style name="ThemeOverlay.TravelCompanion" parent="ThemeOverlay.Material3.Dark">
        <!-- Overlay per tema scuro -->
    </style>

    <style name="ThemeOverlay.TravelCompanion.PopupOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:background">@color/md_theme_dark_surface</item>
    </style>

    <style name="ThemeOverlay.TravelCompanion.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ThemeOverlay.TravelCompanion.Dialog.Alert" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/Widget.TravelCompanion.Button</item>
    </style>

    <!-- ========== ANIMATION ========== -->

    <style name="WindowAnimation.TravelCompanion">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- ========== THEME PER MAP ACTIVITY ========== -->

    <style name="Theme.TravelCompanion.Map" parent="Theme.TravelCompanion">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>