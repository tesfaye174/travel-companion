<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/view_trip_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp"
            android:background="?attr/colorPrimary" />

        <ImageView
            android:id="@+id/iv_trip_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/view_trip_indicator"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/ic_trip" />

        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_trip_type"
            android:text="Roma, Italia"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_trip_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_destination"
            android:layout_toEndOf="@id/iv_trip_type"
            android:layout_marginTop="4dp"
            android:text="Multi-giorno"
            android:textColor="?attr/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_trip_type"
            android:layout_toEndOf="@id/iv_trip_type"
            android:layout_marginTop="2dp"
            android:text="15-20 Gen 2026"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/layout_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dates"
            android:layout_toEndOf="@id/iv_trip_type"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="120.5 km"
                android:textColor="?attr/colorPrimary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8h 2min"
                android:textColor="?attr/colorPrimary"
                android:textSize="12sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_chevron_right"
            android:tint="?android:attr/textColorSecondary" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>